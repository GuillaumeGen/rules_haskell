"""Test compilation of a multiple interdependent Haskell modules with only core-package dependencies."""

load("@rules_haskell//haskell:defs.bzl", "haskell_library")
load("@rules_haskell//haskell/experimental:defs.bzl", "haskell_module")

haskell_module(
    name = "root",
    src = "Root.hs",
)

haskell_module(
    name = "branch_left",
    src = "BranchLeft.hs",
    modules = [
        ":root",
    ],
)

haskell_module(
    name = "branch_right",
    src = "BranchRight.hs",
    modules = [
        ":root",
    ],
)

haskell_module(
    name = "leaf",
    src = "Leaf.hs",
    modules = [
        ":branch_left",
        ":branch_right",
    ],
)

haskell_library(
    name = "lib",
    modules = [
        ":root",
        ":branch_left",
        ":branch_right",
        ":leaf",
    ],
    deps = ["//tests/hackage:base"],
)

filegroup(
    name = "all_files",
    testonly = True,
    srcs = glob(["**"]),
    visibility = ["//visibility:public"],
)
