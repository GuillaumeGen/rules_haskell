load(
    "@rules_haskell//haskell:defs.bzl",
    "haskell_binary",
    "haskell_test",
)
load("@rules_haskell//haskell/experimental:defs.bzl", "haskell_module")

package(default_testonly = 1)

haskell_binary(
    name = "TestBin",
    modules = [
        ":TestBinModule",
    ],
    visibility = ["//visibility:public"],
    deps = [
        "//tests/hackage:base",
    ],
)

haskell_test(
    name = "Test",
    modules = [
        ":TestBinModule",
    ],
    visibility = ["//visibility:public"],
    deps = [
        "//tests/hackage:base",
    ],
)

haskell_module(
    name = "TestBinModule",
    # TODO: Test naming the Main module as something different
    # after adding some attribute to make the module name explicit
    src = "Main.hs",
    deps = ["//tests/hackage:base"],
)

filegroup(
    name = "all_files",
    testonly = True,
    srcs = glob(["**"]),
    visibility = ["//visibility:public"],
)
